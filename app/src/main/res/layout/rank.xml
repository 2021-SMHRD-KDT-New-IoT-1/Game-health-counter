<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@drawable/rank_listview_radius"
    android:clipToPadding="false">


    <TextView
        android:id="@+id/r_exp"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="1000"
        android:textAlignment="textEnd"
        android:textColor="@color/text"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/pull_cnt"
        app:layout_constraintStart_toEndOf="@+id/pull_cnt"
        app:layout_constraintTop_toTopOf="@+id/pull_cnt" />

    <ImageView
        android:id="@+id/rank_my_logo"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/r_num"
        app:layout_constraintStart_toEndOf="@+id/r_num"
        app:layout_constraintTop_toTopOf="@+id/r_num"
        app:srcCompat="@drawable/logo1_alpha" />

    <TextView
        android:id="@+id/r_num"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/co"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Lv10"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/rank_my_logo"
        app:layout_constraintStart_toEndOf="@+id/rank_my_logo"
        app:layout_constraintTop_toTopOf="@+id/rank_my_logo" />

    <TextView
        android:id="@+id/pull_cnt"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="bang9"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/co"
        app:layout_constraintStart_toEndOf="@+id/co"
        app:layout_constraintTop_toTopOf="@+id/co" />

</androidx.constraintlayout.widget.ConstraintLayout>