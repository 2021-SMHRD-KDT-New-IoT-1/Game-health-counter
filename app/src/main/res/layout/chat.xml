<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="50dp">

    <TextView
        android:id="@+id/q_name"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:foregroundGravity="center"
        android:text="푸쉬업을 10회 하세요!"
        android:textColor="@color/text"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.571" />

    <ImageView
        android:id="@+id/q_check"
        android:layout_width="26dp"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/q_name"
        app:layout_constraintStart_toEndOf="@+id/q_name"
        app:layout_constraintTop_toTopOf="@+id/q_name"
        app:layout_constraintVertical_bias="0.571"
        app:srcCompat="@drawable/quest_check" />

    <TextView
        android:id="@+id/q_exp"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="30dp"
        android:foregroundGravity="center"
        android:paddingLeft="0dp"
        android:text="1000 Exp"
        android:textAlignment="textEnd"
        android:textColor="@color/text"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/q_check"
        app:layout_constraintTop_toTopOf="@+id/q_check" />

</androidx.constraintlayout.widget.ConstraintLayout>